<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="io.github.zwieback.familyfinance.extension.BigDecimalExtensionsKt"/>

        <import type="io.github.zwieback.familyfinance.extension.DateExtensionsKt"/>

        <variable
            name="exchangeRate"
            type="io.github.zwieback.familyfinance.core.model.IExchangeRateView"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding">

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/exchange_rate_icon_size"
            android:layout_height="@dimen/exchange_rate_icon_size"
            android:layout_centerVertical="true"
            app:ico_size="@dimen/exchange_rate_icon_size"
            app:iiv_icon="cmd_cash"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/exchange_rate_name_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:text="@{exchangeRate.currencyName}"
            android:textSize="@dimen/exchange_rate_text_size"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="@dimen/exchange_rate_date_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:text="@{DateExtensionsKt.toStringOrEmpty(exchangeRate.date)}"
            android:textSize="@dimen/exchange_rate_text_size"/>

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_toEndOf="@+id/date"
            android:layout_toRightOf="@+id/date"
            android:gravity="end"
            android:text="@{BigDecimalExtensionsKt.toStringOrEmpty(exchangeRate.value)}"
            android:textSize="@dimen/exchange_rate_text_size"/>

    </RelativeLayout>

</layout>
