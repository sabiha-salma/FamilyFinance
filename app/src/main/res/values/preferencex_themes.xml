<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- https://github.com/Gericop/Android-Support-Preference-V7-Fix/blob/master/preference-v7/src/main/res/values/styles.xml -->
    <!-- Base -->
    <style name="PreferenceFixTheme" parent="@style/Theme.AppCompat">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light -->
    <style name="PreferenceFixTheme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferenceFixTheme.Light.DarkActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <!-- DayNight -->
    <style name="PreferenceFixTheme.DayNight" parent="@style/Theme.AppCompat.DayNight">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferenceFixTheme.DayNight.DarkActionBar" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">
            @style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <!-- This is needed because the default PreferenceCategory appearance doesn't use bold text style -->
    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <!-- fontFamily is only supported from API level 16, using typeFace on 14-15 -->
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="PreferenceFixTheme.TextAppearanceDialogMessage" parent="@style/TextAppearance.AppCompat.Subhead" />

    <!-- Temporary SeekBarPreference fixes, don't rely on these -->
    <style name="PreferenceThemeOverlay.v14.Material.Fix">
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference.Material.Fix</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material.Fix</item>
    </style>

    <style name="Preference.SeekBarPreference.Material.Fix">
        <item name="android:layout">@layout/preference_widget_seekbar_material</item>
    </style>

    <style name="PreferenceFragmentList.Material.Fix">
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>
</resources>
