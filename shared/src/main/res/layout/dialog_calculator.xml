<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="end"
            android:inputType="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mikepenz.iconics.view.IconicsButton
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_del"
            android:text="@string/del"
            app:layout_constraintEnd_toEndOf="@+id/op_add"
            app:layout_constraintStart_toStartOf="@+id/op_add"
            app:layout_constraintTop_toBottomOf="@id/number" />

        <Button
            android:id="@+id/clr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_clr"
            android:text="@string/clr"
            app:layout_constraintEnd_toEndOf="@+id/digit_9"
            app:layout_constraintStart_toStartOf="@+id/digit_9"
            app:layout_constraintTop_toBottomOf="@id/number" />

        <Button
            android:id="@+id/digit_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_7"
            app:layout_constraintEnd_toStartOf="@+id/digit_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clr" />

        <Button
            android:id="@+id/digit_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_8"
            app:layout_constraintEnd_toStartOf="@+id/digit_9"
            app:layout_constraintStart_toEndOf="@id/digit_7"
            app:layout_constraintTop_toBottomOf="@id/clr" />

        <Button
            android:id="@+id/digit_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_9"
            app:layout_constraintEnd_toStartOf="@+id/op_add"
            app:layout_constraintStart_toEndOf="@id/digit_8"
            app:layout_constraintTop_toBottomOf="@id/clr" />

        <Button
            android:id="@+id/op_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_op_add"
            android:text="@string/op_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/digit_9"
            app:layout_constraintTop_toBottomOf="@id/clr" />

        <Button
            android:id="@+id/digit_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_4"
            app:layout_constraintEnd_toStartOf="@+id/digit_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/digit_7" />

        <Button
            android:id="@+id/digit_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_5"
            app:layout_constraintEnd_toStartOf="@+id/digit_6"
            app:layout_constraintStart_toEndOf="@id/digit_4"
            app:layout_constraintTop_toBottomOf="@id/digit_8" />

        <Button
            android:id="@+id/digit_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_6"
            app:layout_constraintEnd_toStartOf="@+id/op_sub"
            app:layout_constraintStart_toEndOf="@id/digit_5"
            app:layout_constraintTop_toBottomOf="@id/digit_9" />

        <Button
            android:id="@+id/op_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_op_sub"
            android:text="@string/op_sub"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/digit_6"
            app:layout_constraintTop_toBottomOf="@id/op_add" />

        <Button
            android:id="@+id/digit_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_1"
            app:layout_constraintEnd_toStartOf="@+id/digit_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/digit_4" />

        <Button
            android:id="@+id/digit_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_2"
            app:layout_constraintEnd_toStartOf="@+id/digit_3"
            app:layout_constraintStart_toEndOf="@id/digit_1"
            app:layout_constraintTop_toBottomOf="@id/digit_5" />

        <Button
            android:id="@+id/digit_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_3"
            app:layout_constraintEnd_toStartOf="@+id/op_mul"
            app:layout_constraintStart_toEndOf="@id/digit_2"
            app:layout_constraintTop_toBottomOf="@id/digit_6" />

        <Button
            android:id="@+id/op_mul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_op_mul"
            android:text="@string/op_mul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/digit_3"
            app:layout_constraintTop_toBottomOf="@id/op_sub" />

        <Button
            android:id="@+id/dec_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_dec_point"
            android:text="@string/dec_point"
            app:layout_constraintEnd_toStartOf="@+id/digit_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/digit_1" />

        <Button
            android:id="@+id/digit_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/digit_0"
            app:layout_constraintEnd_toStartOf="@+id/eq"
            app:layout_constraintStart_toEndOf="@id/dec_point"
            app:layout_constraintTop_toBottomOf="@id/digit_2" />

        <Button
            android:id="@+id/eq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_eq"
            android:text="@string/eq"
            app:layout_constraintEnd_toStartOf="@+id/op_div"
            app:layout_constraintStart_toEndOf="@id/digit_0"
            app:layout_constraintTop_toBottomOf="@id/digit_3" />

        <Button
            android:id="@+id/op_div"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_op_div"
            android:text="@string/op_div"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/eq"
            app:layout_constraintTop_toBottomOf="@id/op_mul" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
